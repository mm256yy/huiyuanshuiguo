<view class="content"><view class="head_box box_shadow"><block tt:for="{{orderMenu}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['selectMenuTap',['$0'],[[['orderMenu','',index,'id']]]]]]]}}" class="{{(('label')+' '+((orderActive===item.id)?'alabel':''))}}" bindtap="__e"><view class="tit" style="{{'border-color:'+(orderActive===item.id?'#F54319':'#fff')+';'}}">{{item.name}}</view></view></block></view><block tt:if="{{orderActive!=6}}"><view class="orderList"><block tt:for="{{orderList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view class="list box_shadow"><view class="oheader"><view class="left">{{item.store_info.title}}</view><view class="right"><block tt:if="{{item.order_status===0}}"><view class="status">待付款</view></block><block tt:if="{{item.order_status===1}}"><view class="status">{{item.delivery_type===1?'待发货':'待自提'}}</view></block><block tt:if="{{item.order_status===2}}"><view class="status">待收货</view></block><block tt:if="{{item.order_status===3}}"><view class="status" style="color:#19be6b;border-color:#19be6b40;">{{item.evaluate_status?'已完成':'待评价'}}</view></block><block tt:if="{{item.order_status===4}}"><view class="status" style="color:#c5c8ce;border-color:#c5c8ce40;">{{item.paypal_type?'已关闭':'已过期'}}</view></block></view></view><block tt:if="{{item.goods_list.length===1}}"><view class="goodsOne"><block tt:for="{{item.goods_list}}" tt:for-item="itm" tt:for-index="idx" tt:key="idx"><view class="goods"><view class="left"><image src="{{itm.goods_pic}}" lazy-load="{{true}}" mode="aspectFill"></image></view><view class="right"><view class="title">{{itm.goods_title}}</view><view class="label"><block tt:for="{{itm.goods_spec_name}}" tt:for-item="value" tt:for-index="name" tt:key="name"><text>{{name+":"+value}}</text></block></view><view class="box"><view class="price">{{"¥"+itm.goods_price}}</view><view class="number">{{"x"+itm.buy_num}}</view></view></view></view></block></view></block><block tt:else><scroll-view class="goodsTwo" scroll-x="{{true}}"><block tt:for="{{item.goods_list}}" tt:for-item="itm" tt:for-index="idx" tt:key="idx"><view class="goods"><image src="{{itm.goods_pic}}" lazy-load="{{true}}" mode="aspectFill"></image></view></block></scroll-view></block><view class="infoBox"><view class="left"><view class="label">{{"下单时间："+item.create_time}}</view><view class="label" style="padding-top:4rpx;">{{"订单编号："+item.order_number}}</view></view><view class="right">{{"¥"+item.total_money}}</view></view><view class="ofooter"><view data-event-opts="{{[['tap',[['getOrderDetail',['$0'],[[['orderList','',index,'id']]]]]]]}}" class="button" bindtap="__e">订单详情</view><block tt:if="{{orderActive===1}}"><view data-event-opts="{{[['tap',[['getSericeTap',['$0','tk'],[[['orderList','',index,'id']]]]]]]}}" class="button" style="color:#fff;background-color:#19be6b;border-color:#19be6b;" bindtap="__e">申请退款</view></block><block tt:if="{{orderActive===5}}"><view data-event-opts="{{[['tap',[['getSericeTap',['$0','sh'],[[['orderList','',index,'id']]]]]]]}}" class="button" style="color:#fff;background-color:#ff9900;border-color:#ff9900;" bindtap="__e">申请售后</view></block></view></view></block><view style="height:100rpx;"></view><block tt:if="{{orderList.length===0}}"><view class="none_list_box"><image src="../../../static/images/none_data_icon_02.png" mode="widthFix"></image><block tt:if="{{orderActive===1}}"><label class="_span">暂无可退款订单</label></block><block tt:if="{{orderActive===5}}"><label class="_span">暂无可售后订单</label></block></view></block></view></block><block tt:else><view class="orderList"><block tt:for="{{serviceList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view class="list box_shadow"><view class="oheader"><view class="left">{{item.ctype===1?'申请退款':'申请售后'}}</view><view class="right"><block tt:if="{{item.status===1}}"><view class="status" style="color:#ff9900;border-color:#ff990040;">待处理</view></block><block tt:if="{{item.status===2}}"><view class="status" style="color:#19be6b;border-color:#19be6b40;">处理成功</view></block><block tt:if="{{item.status===3}}"><view class="status" style="color:#ed4014;border-color:#ed401440;">处理失败</view></block><block tt:if="{{item.status===4}}"><view class="status" style="color:#c5c8ce;border-color:#c5c8ce40;">取消申请</view></block></view></view><block tt:if="{{item.return_goods.length===1}}"><view class="goodsOne"><block tt:for="{{item.return_goods}}" tt:for-item="itm" tt:for-index="idx" tt:key="idx"><view class="goods"><view class="left"><image src="{{itm.goods_pic}}" lazy-load="{{true}}" mode="aspectFill"></image></view><view class="right"><view class="title">{{itm.goods_title}}</view><view class="label"><block tt:for="{{itm.goods_spec_name}}" tt:for-item="value" tt:for-index="name" tt:key="name"><text>{{name+":"+value}}</text></block></view><view class="box"><view class="price">{{"申请数量："+itm.num}}</view></view></view></view></block></view></block><block tt:else><scroll-view class="goodsTwo" scroll-x="{{true}}"><block tt:for="{{item.return_goods}}" tt:for-item="itm" tt:for-index="idx" tt:key="idx"><view class="goods"><image src="{{itm.goods_pic}}" lazy-load="{{true}}" mode="aspectFill"></image></view></block></scroll-view></block><view class="tinfoBox"><view class="text">{{(item.ctype===1?'退款':'售后')+"原因："+item.return_reason}}</view><block tt:if="{{item.return_reject}}"><view class="text" style="color:#ed4014;">{{"驳回原因："+item.return_reject}}</view></block></view><view class="tfooter"><view class="left"><block tt:if="{{item.return_money}}"><view class="text">{{"退款金额：¥"+item.return_money}}</view></block></view><view class="right"><block tt:if="{{item.status===1}}"><view data-event-opts="{{[['tap',[['getServicerDetail',[index,1]]]]]}}" class="button" bindtap="__e">取消申请</view></block><block tt:if="{{item.status===3}}"><view data-event-opts="{{[['tap',[['getServicerDetail',[index,2]]]]]}}" class="button" bindtap="__e">删除申请</view></block><block tt:if="{{item.status===3||item.status===4}}"><view 