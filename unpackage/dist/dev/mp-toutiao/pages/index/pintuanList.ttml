<view class="content"><view class="menu_box"><view data-event-opts="{{[['tap',[['selectMenuTap',[0]]]]]}}" class="{{(('label')+' '+((menuActive===0)?'alabel':''))}}" bindtap="__e"><label class="_span">全部拼团</label></view><view data-event-opts="{{[['tap',[['selectMenuTap',[1]]]]]}}" class="{{(('label')+' '+((menuActive===1)?'alabel':''))}}" bindtap="__e"><label class="_span">正在拼团</label></view></view><block tt:if="{{menuActive===0}}"><view class="list_box"><block tt:for="{{goodsList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['getPathTap',['/pages/index/details?id='+item.id]]]]]}}" class="list" bindtap="__e"><view class="image"><image src="{{item.pic}}" mode="aspectFill"></image></view><view class="info"><view class="tag"><label class="_span">{{item.pintuan_peoples+"人团"}}</label></view><view class="title">{{item.title}}</view><view class="box"><view class="price">{{"¥"+item.pintuan_price}}<label class="_span">{{"¥"+item.mini_price}}</label></view><view class="buy">去开团</view></view></view></view></block><block tt:if="{{goodsList.length===0}}"><view class="none_list_box"><image src="../../static/images/none_data_icon_01.png" mode="widthFix"></image><label class="_span">暂无拼团商品</label></view></block></view></block><block tt:if="{{menuActive===1}}"><view class="list_box"><block tt:for="{{pintuanGoods}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['getPathTap',['/pages/index/details?id='+item.goods_id]]]]]}}" class="list" bindtap="__e"><view class="image"><image src="{{item.goods_pic}}" mode="aspectFill"></image></view><view class="info"><view class="tag"><label class="_span">{{item.peoples+"人团"}}</label></view><view class="title">{{item.goods_title}}</view><view class="box"><view class="price">{{"¥"+item.goods_pintuan_price}}<label class="_span">{{"¥"+item.goods_price}}</label></view><view class="buy">去参团</view></view></view></view></block><block tt:if="{{pintuanGoods.length===0}}"><view class="none_list_box"><image src="../../static/images/none_data_icon_01.png" mode="widthFix"></image><label class="_span">暂无拼团中商品</label></view></block></view></block></view>