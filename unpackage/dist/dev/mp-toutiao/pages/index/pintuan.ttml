<block tt:if="{{pintuanDetails}}"><view class="content"><block tt:if="{{goodsDetail}}"><view class="goods_info_box"><view class="goods"><view class="image"><image src="{{goodsDetail.pic_list[0].pic}}" mode="aspectFill"></image></view><view class="info"><view class="title">{{goodsDetail.title}}</view><view class="text">{{goodsDetail.introduce}}</view><view class="box"><view class="price">{{"¥"+goodsDetail.pintuan_price}}<label class="_span">{{"¥"+goodsDetail.mini_price}}</label></view><view class="text">{{pintuanDetails.peoples+"人团"}}</view></view></view></view></view></block><view class="pintuan_info_box"><view class="user_info_box"><view class="user_list"><view class="user"><image src="{{pintuanDetails.tuanzhangData.avatar}}" mode="aspectFill"></image><label class="_span">团长</label></view><u-avatar-group vue-id="e6e1e430-1" urls="{{pintuanDetails.userImg}}" size="35" gap="0.4" bind:__l="__l"></u-avatar-group></view><block tt:if="{{pintuanDetails.status===1}}"><view class="title">拼团中，还差<label class="_span">{{pintuanDetails.peoples-pintuanDetails.join_user.length}}</label>人即可成团</view></block><block tt:else><block tt:if="{{pintuanDetails.status===2}}"><view class="title">{{"拼团失败，已支付款项会"+(pintuanConfig.return_pay===2?'退回余额':'原路退回')}}</view></block><block tt:else><block tt:if="{{pintuanDetails.status===3}}"><view class="title">拼团成功，订单动态请查看详情</view></block></block></block><block tt:if="{{pintuanDetails.status===1}}"><view class="time"><view class="line"></view><view class="time"><label class="_span">剩余</label><u-count-down vue-id="e6e1e430-2" time="{{pintuanDetails.count_down_time}}" format="HH:mm:ss" autoStart="{{true}}" millisecond="{{true}}" data-event-opts="{{[['^change',[['onChange']]]]}}" bind:change="__e" bind:__l="__l" vue-slots="{{['default']}}"><view class="times"><view class="time__custom"><text class="time__custom__item">{{timeData.hours>=10?timeData.hours:'0'+timeData.hours}}</text></view><text class="time__doc">:</text><view class="time__custom"><text class="time__custom__item">{{timeData.minutes>=10?timeData.minutes:'0'+timeData.minutes}}</text></view><text class="time__doc">:</text><view class="time__custom"><text class="time__custom__item">{{timeData.seconds>=10?timeData.seconds:'0'+timeData.seconds}}</text></view></view></u-count-down><label class="_span">结束</label></view></view></block></view><view class="btn_box"><block tt:if="{{pintuanDetails.status===1&&pintuanDetails.captain_id===userInfo.uid}}"><view class="button active" style="margin-bottom:30rpx;">立即邀请好友参团<button open-type="share"></button></view></block><block tt:else><block tt:if="{{pintuanDetails.status===1&&pintuanDetails.join_user_data}}"><view class="button active" style="margin-bottom:30rpx;">立即邀请好友参团<button open-type="share"></button></view></block><block tt:else><block tt:if="{{pintuanDetails.status===1}}"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="button active" style="margin-bottom:30rpx;" bindtap="__e">立即参团</view></block></block></block><block tt:if="{{pintuanDetails.status===3}}"><view data-event-opts="{{[['tap',[['getPathTap',['/pages/order/details?id='+pintuanDetails.join_user_data.order_id]]]]]}}" class="button" bindtap="__e">查看订单详情</view></block><block tt:else><view data-event-opts="{{[['tap',[['getPathTap',['/pages/user/pintuan']]]]]}}" class="button" bindtap="__e">我的拼团订单</view></block><block tt:if="{{pintuanDetails.status===2}}"><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="button active" style="margin-top:30rpx;" bindtap="__e">重新购买并开团</view></block></view></view><block tt:if="{{goodsDetail.contents}}"><view class="goods_content_box"><view class="head_tit">商品详情</view><u-parse vue-id="e6e1e430-3" content="{{goodsDetail.contents}}" lazy-load="{{true}}" preview-img="{{false}}" tag-style="{{tagStyle}}" bind:__l="__l"></u-parse></view></block><block tt:if="{{hotGoodsList.length>0}}"><view class="hot_goods_list"><view class="hot_head"><u-divider vue-id="e6e1e430-4" text="更多拼团商品" bind:__l="__l"></u-divider></view><view class="goods_list_box"><block tt:for="{{hotGoodsList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['getPathTap',['/pages/menu/details?id='+item.id]]]]]}}" class="goods" bindtap="__e"><view class="image"><image src="{{item.pic}}" mode="widthFix"></image></view><view class="info"><view class="title">{{item.title}}</view><view class="box"><view class="price"><label class="_span">¥</label>{{item.mini_price}}</view><view class="add"><aicon vue-id="{{'e6e1e430-5-'+index}}" type="shopping-cart-2-fill" color="#da0a79" size="16" bind:__l="__l"></aicon></view></view></view></view></block></view></view></block><spec-picker vue-id="e6e1e430-6" cardShow="{{cartShow}}" kaituanId="{{kaituanId}}" goods="{{goodsDetail}}" orderType="pintuan" data-event-opts="{{[['^close',[['e2']]]]}}" bind:close="__e" bind:__l="__l"></spec-picker></view></block>