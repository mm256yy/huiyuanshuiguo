.headerBox {
  width: 100%;
  height: 290rpx;
  background-color: #00a9f4;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.headerBox .logo {
  display: flex;
  align-items: center;
  width: 85%;
  margin: 0 auto;
  justify-content: center;
  flex-direction: column;
}
.headerBox .logo image {
  width: 70rpx;
  height: 70rpx;
}
.headerBox .logo .title {
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  padding-top: 20rpx;
}
.headerBox .text {
  color: #FFFFFF;
  font-size: 26rpx;
  background-color: #ffffff;
  max-width: 600rpx;
  margin: 0 auto;
  height: 66rpx;
  border-radius: 100rpx;
  margin-top: 36rpx;
  line-height: 66rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  padding: 0 20rpx;
}
.headerBox .text ._span {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.headerBox .text text {
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #ffffff;
  position: absolute;
  top: -20rpx;
  left: 0;
  right: 0;
  width: 0;
  height: 0;
  margin: 0 auto;
}
.infoBox {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 50rpx;
}
.infoBox .title {
  font-weight: bold;
  font-size: 38rpx;
  color: #222;
}
.infoBox .text {
  color: #999;
  font-size: 28rpx;
  padding-top: 10rpx;
}
.infoBox .number {
  color: #00a9f4;
  font-size: 52rpx;
  font-weight: bold;
  width: 420rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100rpx;
  margin-top: 30rpx;
}
.infoBox .intro {
  width: 400rpx;
  background-color: rgba(0, 169, 244, 0.1);
  margin-top: 30rpx;
  padding: 12rpx 0;
  border-radius: 6rpx;
}
.infoBox .intro .tit {
  font-size: 24rpx;
  text-align: center;
}
.infoBox .intro .num {
  font-size: 48rpx;
  text-align: center;
}
.qrcode {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 80rpx;
}
.qrcode .label {
  width: 250rpx;
  background-color: rgba(0, 169, 244, 0.1);
  border: 1px solid rgba(0, 169, 244, 0.3);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  border-radius: 6rpx;
}
.qrcode .label image {
  width: 200rpx;
  height: 200rpx;
}
.qrcode .label .text {
  color: #222;
  font-size: 24rpx;
  padding-top: 20rpx;
}
.button_box {
  width: 60%;
  height: 80rpx;
  background-color: #009DFF;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

