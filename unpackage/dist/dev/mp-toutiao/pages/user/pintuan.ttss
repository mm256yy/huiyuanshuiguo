.head_box {
  display: flex;
  align-items: center;
  height: 120rpx;
  background-color: #fff;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 100;
}
.head_box .label {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.head_box .label .tit {
  color: #666;
  transition: all 0.2s;
  padding-top: 6rpx;
  border-bottom: 3px solid transparent;
  padding-bottom: 10rpx;
  font-size: 30rpx;
}
.head_box .alabel .tit {
  color: #1c1c1c;
  font-weight: bold;
  border-color: #00d389;
}
.order_list_box {
  width: 100%;
  padding-top: 30rpx;
  min-height: 72vh;
}
.order_list_box .order {
  width: 92%;
  margin: 0 auto;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.order_list_box .order .head {
  display: flex;
  align-items: center;
  width: 92%;
  margin: 0 auto;
  height: 80rpx;
  justify-content: space-between;
}
.order_list_box .order .head .left {
  color: #999;
  font-size: 28rpx;
}
.order_list_box .order .goods_box {
  width: 92%;
  margin: 0 auto;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}
.order_list_box .order .goods_box .goods {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.order_list_box .order .goods_box .goods .left {
  width: 190rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.order_list_box .order .goods_box .goods .left image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.order_list_box .order .goods_box .goods .right {
  flex: 1;
  min-width: 0;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order_list_box .order .goods_box .goods .right .title {
  color: #1c1c1c;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 95%;
}
.order_list_box .order .goods_box .goods .right .text {
  color: #666;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 95%;
}
.order_list_box .order .goods_box .goods .right .box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 95%;
  padding-top: 10rpx;
}
.order_list_box .order .goods_box .goods .right .box .num {
  color: #1c1c1c;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.order_list_box .order .goods_box .goods .right .box .num ._span {
  font-size: 26rpx;
  padding-left: 2rpx;
}
.order_list_box .order .goods_box .goods .right .box .buy {
  color: #1c1c1c;
  padding: 0 10rpx;
  border-radius: 10rpx;
}
.order_list_box .order .foot {
  width: 92%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}
.order_list_box .order .foot .left {
  color: #1c1c1c;
  font-size: 28rpx;
}
.order_list_box .order .foot .right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.order_list_box .order .foot .right .button {
  border: 1px solid #e5e5e5;
  color: #666;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-radius: 100rpx;
  line-height: 28rpx;
  display: flex;
  align-items: center;
  height: 50rpx;
  position: relative;
}
.order_list_box .order .foot .right .button button {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}
.order_list_box .order .foot .right .active {
  background-color: #F54319;
  color: #fff;
  border-color: #F54319;
  margin-left: 20rpx;
}

