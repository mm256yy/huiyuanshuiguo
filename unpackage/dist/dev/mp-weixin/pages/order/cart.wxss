.card_goods_list {
  width: 750rpx;
  overflow-x: hidden;
}
.card_goods_list .goods {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-width: 0;
}
.card_goods_list .goods .left {
  width: 120rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.card_goods_list .goods .center {
  width: 200rpx;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.card_goods_list .goods .center image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.card_goods_list .goods .right {
  flex: 1;
  min-width: 0;
  padding-left: 30rpx;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.card_goods_list .goods .right .name_box {
  width: 95%;
}
.card_goods_list .goods .right .name_box .title {
  font-size: 30rpx;
  color: #1c1c1c;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card_goods_list .goods .right .name_box .intro {
  color: #999;
  font-size: 26rpx;
  padding-top: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card_goods_list .goods .right .box {
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card_goods_list .goods .right .box .price {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #F54319;
}
.card_goods_list .goods .right .box .price ._span {
  font-weight: normal;
  font-size: 26rpx;
  padding-right: 4rpx;
}
.card_goods_list .goods .right .box .numbox .none {
  color: #999;
  font-size: 26rpx;
}
.card_goods_list .goods .right .box .numbox .buy {
  display: flex;
  align-items: center;
}
.card_goods_list .goods .right .box .numbox .buy .btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.card_goods_list .goods .right .box .numbox .buy .btn aicon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.card_goods_list .goods .right .box .numbox .buy .input {
  width: 100rpx;
  height: 50rpx;
  background-color: #eee;
  margin: 0 6rpx;
  border-radius: 100rpx;
}
.card_goods_list .goods .right .box .numbox .buy .input input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #1c1c1c;
}
.card_footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: #fff;
  padding-bottom: env(safe-area-inset-bottom);
}
.card_footer .label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  height: 100rpx;
}
.card_footer .label .left {
  display: flex;
  align-items: center;
  color: #999;
}
.card_footer .label .left ._span {
  padding-left: 10rpx;
}
.card_footer .label .right {
  display: flex;
  align-items: center;
}
.card_footer .label .right .price {
  color: #1c1c1c;
  font-size: 28rpx;
  margin-right: 50rpx;
}
.card_footer .label .right .price ._span {
  color: #F54319;
  font-weight: bold;
  font-size: 30rpx;
}
.card_footer .label .right .btn_box {
  background-color: #F54319;
  color: #fff;
  width: 200rpx;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.card_footer .hover_label {
  height: 120rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
}
.hot_goods_list {
  padding-top: 50rpx;
  padding-bottom: 110rpx;
}
.hot_goods_list .hot_head {
  width: 80%;
  margin: 0 auto;
  padding: 20rpx 0;
}
.hot_goods_list .goods_list {
  width: 92%;
  padding-top: 40rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.hot_goods_list .goods_list .goods {
  flex-basis: 48%;
  margin-bottom: 30rpx;
}
.hot_goods_list .goods_list .goods .image image {
  width: 100%;
  height: 280rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.hot_goods_list .goods_list .goods .info {
  border: 1px solid #efefef;
  border-top: none;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding: 20rpx 0;
  min-width: 0;
}
.hot_goods_list .goods_list .goods .info .title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #1f1f1f;
  font-size: 28rpx;
  width: 90%;
  margin: 0 auto;
  max-width: 300rpx;
}
.hot_goods_list .goods_list .goods .info .title ._span {
  background-color: #F54319;
  color: #fff;
  padding: 0 6rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}
.hot_goods_list .goods_list .goods .info .box {
  width: 90%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 10rpx;
}
.hot_goods_list .goods_list .goods .info .box .left {
  flex: 1;
  min-width: 0;
  min-height: 82rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.hot_goods_list .goods_list .goods .info .box .left .price {
  color: #F54319;
  font-size: 30rpx;
}
.hot_goods_list .goods_list .goods .info .box .left .price ._span {
  color: #999;
  font-size: 26rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.hot_goods_list .goods_list .goods .info .box .left .vip {
  color: #1f1f1f;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding-top: 6rpx;
}
.hot_goods_list .goods_list .goods .info .box .left .vip ._span {
  background-color: #1f1f1f;
  color: gold;
  font-size: 20rpx;
  padding: 0 6rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  margin-left: 10rpx;
}
.hot_goods_list .goods_list .goods .info .box .left .tuan ._span {
  margin-left: 0;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  background-color: gold;
  color: #1f1f1f;
}
.hot_goods_list .goods_list .goods .info .box .right aicon {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #F54319;
  border-radius: 100%;
}

