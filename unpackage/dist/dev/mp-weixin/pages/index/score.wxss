.swiperBpx {
  width: 90%;
  margin: 0 auto;
  padding-top: 14rpx;
  position: relative;
}
.swiperBpx .swiper {
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.swiperBpx .swiper swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.swiperBpx .swiperDots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 12rpx;
  display: flex;
  justify-content: center;
  height: 10rpx;
}
.swiperBpx .swiperDots .dot {
  margin: 0 5rpx;
  width: 25rpx;
  height: 4rpx;
  background: #fff;
  border-radius: 20rpx;
  transition: all 0.6s;
  opacity: 0.5;
}
.swiperBpx .swiperDots .active {
  opacity: 1;
}
.search {
  width: 92%;
  margin: 0 auto;
  border: 1px solid #f2f2f2;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100rpx;
  margin-top: 30rpx;
  position: relative;
}
.search input {
  width: 80%;
  height: 100%;
  text-align: center;
  font-weight: normal;
}
.search .del {
  position: absolute;
  right: 20rpx;
}
.score_box {
  width: 90%;
  margin: 0 auto;
  padding: 40rpx 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #efefef;
}
.score_box .left .tit {
  color: #1f1f1f;
  font-size: 28rpx;
}
.score_box .left .number {
  color: #F54319;
  font-size: 60rpx;
  font-weight: bold;
  line-height: 80rpx;
}
.score_box .right {
  height: 86rpx;
  display: flex;
  align-items: flex-end;
}
.score_box .right .txt {
  color: #999999;
  font-size: 26rpx;
}
.goods_list {
  width: 92%;
  padding-top: 40rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods_list .goods {
  flex-basis: 48%;
  margin-bottom: 30rpx;
}
.goods_list .goods .image image {
  width: 100%;
  height: 280rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.goods_list .goods .info {
  border: 1px solid #efefef;
  border-top: none;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding: 20rpx 0;
  min-width: 0;
}
.goods_list .goods .info .title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #1f1f1f;
  font-size: 28rpx;
  width: 90%;
  margin: 0 auto;
}
.goods_list .goods .info .box {
  width: 90%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 10rpx;
}
.goods_list .goods .info .box .left {
  flex: 1;
  min-width: 0;
}
.goods_list .goods .info .box .left .price {
  color: #F54319;
  font-size: 36rpx;
  display: flex;
  align-items: center;
}
.goods_list .goods .info .box .left .price ._span {
  font-size: 28rpx;
  padding-left: 8rpx;
}
.goods_list .goods .info .box .right {
  font-size: 26rpx;
  color: #999;
}

