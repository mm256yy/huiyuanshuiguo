<view class="content"><block wx:if="{{couponsBannerList.length>0}}"><view class="swiper_box box_show"><swiper class="swiper" circular="{{true}}" autoplay="{{true}}" interval="6000" duration="500" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{couponsBannerList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image lazy-load="true" mode="aspectFill" src="{{item.pic}}" data-event-opts="{{[['tap',[['getPathTap',['$0'],[[['couponsBannerList','',index,'target_data']]]]]]]}}" bindtap="__e"></image></swiper-item></block></swiper><view class="swiper_dots"><block wx:for="{{couponsBannerList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="{{['dot',swiperCurrent==index?'active':'']}}"></view></block></block></view></view></block><view class="coupons_list_box"><block wx:if="{{couponsList.length>0}}"><block><view class="head_tit">可领取的优惠券</view><block wx:for="{{couponsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{item.ctype<=2}}"><view class="label box_shadow"><view class="price">{{item.moneys}}<label class="_span">元</label></view><view class="info"><view class="title">{{item.title}}</view><view class="text">{{"消费满"+item.min_money+"元可使用，"+(item.goods_type===1?'全场商品可用':'指定商品可用')}}</view><view class="intro">{{"共发放"+item.numbers+"张，已有"+item.user_number+"人领取"}}</view><view class="btn_box"><block wx:if="{{item.user_status}}"><view data-event-opts="{{[['tap',[['couponsUserTap',['$0'],[[['couponsList','',index]]]]]]]}}" class="btn" bindtap="__e">立即领取</view></block><block wx:else><view class="btn" style="opacity:.5;">已领取过</view></block></view></view></view></block></block></block></block><block wx:if="{{couponsList.length===0}}"><view class="none_list_box"><image src="../../static/images/none_data_icon_04.png" mode="widthFix"></image><label class="_span">暂无可领优惠券</label></view></block></view></view>