page {
  width: 100%;
  height: 100%;
}
.address_form .form_box {
  width: 92%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 0;
}
.address_form .form_box .label {
  display: flex;
  align-items: center;
  height: 120rpx;
  width: 90%;
  margin: 0 auto;
}
.address_form .form_box .label .title {
  width: 140rpx;
  color: #1c1c1c;
  font-size: 28rpx;
}
.address_form .form_box .label .input {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  border: 1px solid #efefef;
  border-radius: 10rpx;
  justify-content: space-between;
}
.address_form .form_box .label .input input {
  width: 92%;
  height: 100%;
  color: #1c1c1c;
  font-size: 28rpx;
  padding-left: 20rpx;
}
.address_form .form_box .label .input .local {
  width: 70rpx;
  height: 70rpx;
  background-color: #efefef;
  display: flex;
  align-items: center;
  justify-content: center;
}
.address_form .form_box .label .input picker {
  width: 92%;
  height: 100%;
  line-height: 70rpx;
  color: #1c1c1c;
  font-size: 28rpx;
  padding-left: 20rpx;
}
.address_form .form_box .label .input picker .picker {
  width: 100%;
}
.address_form .form_box .label .input picker .picker text {
  padding: 0 10rpx;
  color: #bbb;
}
.address_form .form_box .button {
  width: 70%;
  margin: 0 auto;
  padding-bottom: 30rpx;
}
.address_form .form_box .button .saveBtn {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  border: 1px solid;
  background-color: #F54319;
}
.address_form .form_box .button .wechat {
  background-color: #fff;
  color: #07c160;
  border: 1px solid #07c160;
}

