.user_bg_box {
  width: 100%;
  background-color: #FF633D;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: 1;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}
.user_bg_box .user_box {
  width: 90%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  height: 220rpx;
}
.user_bg_box .user_box .avatar {
  width: 120rpx;
  height: 120rpx;
  position: relative;
}
.user_bg_box .user_box .avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
}
.user_bg_box .user_box .avatar .edit {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  bottom: 0;
  right: -6rpx;
  background-color: #F54319;
}
.user_bg_box .user_box .avatar button {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}
.user_bg_box .user_box .info {
  flex: 1;
  min-width: 0;
  color: #fff;
  padding-left: 30rpx;
}
.user_bg_box .user_box .info .name {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}
.user_bg_box .user_box .info .name .tit {
  max-width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.user_bg_box .user_box .info .name input {
  border: 1px solid #fff;
  height: 60rpx;
  padding-left: 20rpx;
  font-weight: normal;
  border-radius: 10rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  width: 380rpx;
}
.user_bg_box .user_box .info .name .edit {
  margin-left: 10rpx;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user_bg_box .user_box .info .name .edit aicon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user_bg_box .user_box .info .text {
  font-size: 26rpx;
  padding-top: 10rpx;
}
.user_bg_box .vip_box {
  width: 90%;
  margin: 0 auto;
  left: 0;
  right: 0;
  height: 90rpx;
  color: #F54319;
  background-color: #fff;
  border-bottom: 1px solid #F5431920;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.user_bg_box .vip_box .vip {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  width: 92%;
  margin: 0 auto;
}
.user_bg_box .vip_box .vip .left {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.user_bg_box .vip_box .vip .left aicon {
  width: 44rpx;
  height: 44rpx;
}
.user_bg_box .vip_box .vip .left ._span {
  padding-left: 6rpx;
}
.user_bg_box .money_box {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  color: #fff;
  width: 100%;
  margin: 0 auto;
  height: 130rpx;
}
.user_bg_box .money_box .label {
  flex: 1;
  text-align: center;
  min-width: 0;
}
.user_bg_box .money_box .label .number {
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user_bg_box .money_box .label .number ._span {
  font-size: 30rpx;
  padding-left: 4rpx;
}
.user_bg_box .money_box .label .money_num ._span {
  padding-left: 0;
  padding-right: 4rpx;
}
.user_bg_box .money_box .label .name {
  font-size: 28rpx;
  opacity: 0.6;
  color: #fff;
}
.none_user_bg_box .user_box {
  padding-bottom: 0;
}
.user_head_box {
  display: none;
  margin-top: -40rpx;
  z-index: 10;
  background-color: #fff;
  position: relative;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.order_list_box {
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 30rpx 0 0;
}
.order_list_box .label {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.order_list_box .label .image aicon {
  background-color: #F5431915;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
}
.order_list_box .label .text {
  color: #1c1c1c;
  font-size: 28rpx;
  padding-top: 10rpx;
}
.banner_box {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx #00000006;
}
.banner_box .pic {
  width: 100%;
  height: 100%;
}
.banner_box .pic image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.menu_box {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.menu_box .label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.menu_box .label .icons {
  width: 70rpx;
}
.menu_box .label .icons aicon {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.menu_box .label .name {
  flex: 1;
  min-width: 0;
  color: #1c1c1c;
  font-size: 30rpx;
}
.menu_box .label button {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}
.power_by {
  padding-top: 40rpx;
}

