.goods_box {
  width: 100%;
  padding-top: 30rpx;
}
.goods_list_box {
  -webkit-columns: 2;
          columns: 2;
  -webkit-column-gap: 30rpx;
          column-gap: 30rpx;
  width: 90%;
  margin: 0 auto;
}
.goods_list_box .goods {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  page-break-inside: avoid;
  margin-bottom: 30rpx;
}
.goods_list_box .goods .image {
  width: 100%;
  height: 280rpx;
}
.goods_list_box .goods .info {
  background-color: #fff;
  border: 1px solid #efefef;
  border-top: none;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding: 20rpx;
  min-width: 0;
}
.goods_list_box .goods .info .title {
  color: #1c1c1c;
  font-size: 28rpx;
}
.goods_list_box .goods .info .box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
}
.goods_list_box .goods .info .box .price {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #F54319;
}
.goods_list_box .goods .info .box .price ._span {
  font-weight: normal;
  font-size: 24rpx;
  padding-right: 2rpx;
}
.goods_list_box .goods .info .box .add {
  font-size: 24rpx;
  color: #999;
}

