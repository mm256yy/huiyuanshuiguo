.showBox .pheader {
  font-size: 32rpx;
  color: #1f1f1f;
  font-weight: b;
  width: 1;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.showBox .payTime {
  display: flex;
  align-items: center;
  justify-content: center;
}
.showBox .payTime .time_box {
  width: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  background-color: #ff2a36;
  border-radius: 6rpx;
}
.showBox .payTime .time_box .u-count-down__text {
  color: #fff;
}
.showBox .paypalList {
  padding-top: 30rpx;
  width: 100%;
  padding-bottom: 100rpx;
}
.showBox .paypalList .paypal {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  position: relative;
  padding: 20rpx 0;
}
.showBox .paypalList .paypal .left {
  flex-basis: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.showBox .paypalList .paypal .right {
  flex: 1;
  min-width: 0;
}
.showBox .paypalList .paypal .right .title {
  color: #1f1f1f;
  font-size: 28rpx;
  font-weight: bold;
}
.showBox .paypalList .paypal .right .info {
  color: #999;
  font-size: 28rpx;
  padding-top: 6rpx;
}
.showBox .paypalList .paypal .icon {
  flex-basis: 80rpx;
  display: flex;
  justify-self: flex-end;
  align-items: center;
}

