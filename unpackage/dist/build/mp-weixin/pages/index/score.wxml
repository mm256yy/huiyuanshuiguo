<view class="content"><block wx:if="{{swiperList.length>0}}"><view class="swiperBpx"><swiper class="swiper" circular="{{true}}" autoplay="{{true}}" interval="6000" duration="500" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item data-event-opts="{{[['tap',[['getPathTap',['$0'],[[['swiperList','',index,'target_data']]]]]]]}}" bindtap="__e"><image lazy-load="true" mode="aspectFill" src="{{item.pic}}"></image></swiper-item></block></swiper><view class="swiperDots"><block wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="{{['dot',swiperCurrent==index?'active':'']}}"></view></block></block></view></view></block><view class="score_box"><view class="left"><view class="tit">我的积分</view><view class="number">{{userScore}}</view></view><view class="right"><view data-event-opts="{{[['tap',[['getPathTap',['/pages/user/score_list']]]]]}}" class="txt" bindtap="__e">积分消费明细</view></view></view><view class="goods_list"><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['getPathTap',['/pages/index/details?id='+item.id]]]]]}}" class="goods" bindtap="__e"><view class="image"><image src="{{item.pic}}" mode="aspectFill"></image></view><view class="info"><view class="title">{{item.title}}</view><view class="box"><view class="left"><view class="price">{{item.mini_score}}<label class="_span">积分</label></view></view><view class="right">{{"已兑"+item.views_see}}</view></view></view></view></block></view><block wx:if="{{goodsList.length===0}}"><view class="none_list_box" style="height:50vh;"><image src="../../static/images/none_data_icon_01.png" mode="widthFix"></image><label class="_span">暂无积分商品</label></view></block></view>